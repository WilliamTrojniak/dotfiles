# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
	colors = true
        interval = 5
	separator = "|"
	color_bad = "#f38ba8"
	color_degraded = "#fab387"
	color_good = "#a6e3a1"
	

}

order += "volume master"
# order += "ipv6"
order += "wireless _first_"
# order += "ethernet _first_"
# order += "cpu_usage"
# order += "battery all"
# order += "disk /"
# order += "load"
# order += "memory"
order += "tztime local"
order += "time"

volume master {
	format = "Vol: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

wireless _first_ {
        format_up = "%essid"
        format_down = "no wifi"
	separator = true
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

cpu_usage {
	format = "CPU: %usage"

}

battery all {
        format = "%status %percentage %remaining"
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%A, %B %-d"
}

time {
	format = "%-I:%M%P "
}
